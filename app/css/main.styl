body
	margin: 0
	padding: 0
	font-family: Verdana, Helvetica, Arial, sans-serif

header
	padding: 10px 0
	background: #2196F3
	color: white
	text-align: center
	font: 400 20px/normal Verdana, Arial, Helvetica, sans-serif

main
	margin-top: 36px

button-size-big = 60px

.center
	margin: 0 auto
	width: 300px

.button
	padding: 0 26px
	height: button-size-big
	border: none
	border-radius: 2px
	background: #FF4081
	box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 2px rgba(0, 0, 0, .2)
	color: #fff
	text-align: center
	text-transform: uppercase
	font-weight: 500
	font-size: 14px;
	line-height: button-size-big
	cursor: pointer
	transition: all .2s ease-in-out
	user-select: none

	&:hover,
	&:active
		background-color: #ff5a92;

	&:active
		box-shadow: 0 10px 20px rgba(0,0,0,.19),0 6px 6px rgba(0,0,0,.23);

