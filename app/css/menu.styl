button-color-purple = #FF4081
button-size-big = 60px
button-transition = all .2s ease-in-out

block-margin-top = 20px

.center
	box-sizing: border-box
	width: 400px
	text-align: center
	font-weight: 400

.button
	padding: 0 26px
	height: button-size-big
	border: none
	border-radius: 2px
	background: darken(button-color-purple, 30%)
	box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 2px rgba(0, 0, 0, .2)
	color: #fff
	font-size: 14px;
	line-height: button-size-big
	cursor: pointer
	transition: button-transition
	user-select: none

	&:hover,
	&:active
		background-color: darken(button-color-purple, 20%)

	&:active
		box-shadow: 0 10px 20px rgba(0, 0, 0, .19), 0 6px 6px rgba(0, 0, 0, .23);

block-header-offset = -26px

.block
	margin-top: (-1 * block-header-offset) + block-margin-top
	padding: 10px 0 0 0
	border-top: 2px solid #ccc

	&-title
		position: relative
		top: block-header-offset
		display: inline-block
		padding: 4px 12px
		background: #fff
		user-select: none

	&-options
		position: relative
		top: 0.6 * block-header-offset
		font-size: 12px

		&-item
			display: inline-block
			margin: 0 12px
			padding: 12px
			border-radius: 4px
			background: #e1e1e1
			box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 2px rgba(0, 0, 0, .2)
			cursor: pointer
			transition: button-transition
			user-select: none

			&-active
				&:hover
					background: #f1f1f1

				&:active
					background: #f5f5f5
					box-shadow: inset 1px 1px 4px 1px rgba(0, 0, 0, 0.2)

			&-selected
				background: #f5f5f5
				box-shadow: inset 1px 1px 4px 1px rgba(0, 0, 0, 0.2)
				cursor: auto;
