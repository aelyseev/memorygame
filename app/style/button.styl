button-color-purple = #4aa1ef
button-menu-size = 40px
button-menu-raduis = 4px
button-transition = all .2s ease-in-out

button-game-size = 30px
button-game-radius = 3px

.button
	height: button-menu-size
	border: none
	outline: none
	border-radius: button-menu-raduis
	box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 2px rgba(0, 0, 0, .2);
	font-size: 14px
	line-height: button-menu-size
	cursor: pointer
	transition: button-transition
	user-select: none

	&-centered
		box-sizing: border-box
		text-align: center
		font-weight: 400

	&-enabled
		background: darken(button-color-purple, 30%)
		color: #fff

		&:hover,
		&:active
			background-color: darken(button-color-purple, 20%)

		&:active
			box-shadow: inset 3px 3px 4px 1px rgba(0, 0, 0, 0.2)

	&-disabled
		background: #e1e1e1
		color: #d1d1d1

	&-menu
		margin: button-menu-size*0.25 0
		border-radius: button-menu-raduis

	&-game
		margin-bottom: 12px
		width: 100%
