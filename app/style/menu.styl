@require "common.styl"
@require "button.styl"

block-margin-top = 20px

.menu-width
	width: 400px

block-header-offset = -26px

.block
	margin-top: (-1 * block-header-offset) + block-margin-top
	padding: 10px 0 0 0
	border-top: 2px solid #ccc
	text-align: center

	&-title
		position: relative
		top: block-header-offset
		display: inline-block
		padding: 4px 12px
		background: #fff
		user-select: none

	&-options
		position: relative
		top: 0.6 * block-header-offset
		font-size: 12px

		&-item
			display: inline-block
			margin: 0 12px
			padding: 12px
			border-radius: 4px
			background: #e1e1e1
			box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 2px rgba(0, 0, 0, .2)
			cursor: pointer
			transition: button-transition
			user-select: none

			&-active
				&:hover
					background: #f1f1f1

				&:active
					background: #f5f5f5
					box-shadow: inset 1px 1px 4px 1px rgba(0, 0, 0, 0.2)

			&-selected
				background: #f5f5f5
				box-shadow: inset 1px 1px 4px 1px rgba(0, 0, 0, 0.2)
				cursor: auto;
